@page "/ExerciceAPI"
@inject NavigationManager navigation

<h3>UserConsommationAPI</h3>

<div>
<AuthorizeView> 
    <NotAuthorized> 
        <button @onclick=@(() => navigation.NavigateTo("register"))>S'enregistrer</button>
        <button @onclick=@(() => navigation.NavigateTo("login"))>Se connecter</button>
    </NotAuthorized>
    <Authorized>
        <button @onclick="Logout">Se déconnecter</button>
    </Authorized>
</AuthorizeView>
</div>

<AuthorizeView>
    <Authorized>
        <div>
            <button @onclick=@(() => navigation.NavigateTo("changePassword"))>Changer son mot de passe</button>
        </div>
    </Authorized>
</AuthorizeView>

<ListeUtilisateur></ListeUtilisateur>
